<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".Login.Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_bacground"
                android:layout_width="match_parent"
                android:layout_height="333dp"

                android:background="@color/darkyellow">


                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"

                    android:background="@color/darkyellow">


                    <RelativeLayout
                        android:id="@+id/back_help"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/arrow_profile_edit"

                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/arrow_back" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/help"
                        android:textColor="@color/black1"
                        android:textSize="18dp" />


                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="333dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/trasparent_back" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/tower_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:orientation="horizontal"

                    android:weightSum="15">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/_70sdp"

                        android:layout_weight="5"

                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="102dp"
                                android:layout_height="52dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/icon_call_us" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins"
                                android:text="Call  Us"
                                android:textColor="@color/black1"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/_70sdp"

                        android:layout_weight="5"

                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="102dp"
                                android:layout_height="52dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/mail_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins"
                                android:text="Email Us"
                                android:textColor="@color/black1"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"

                        android:layout_marginTop="@dimen/_70sdp"
                        android:layout_weight="5"
                        android:elevation="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="102dp"
                                android:layout_height="52dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/headest_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins"
                                android:text="Chat"
                                android:textColor="@color/black1"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="305dp"
                android:background="@drawable/card_help_shape"
                android:elevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins"
                        android:text="Quick Contact"
                        android:textColor="@color/black4"
                        android:textSize="@dimen/_16sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/t_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="@string/name"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangular_edit">

                        <!-- <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/poppins"
                        android:hint="Enter Full Name Here"
                        android:textColorHint="@color/gray7"
                        android:textSize="@dimen/_14sdp"


                        />-->


                        <EditText
                            android:id="@+id/h_name"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:backgroundTint="@color/white"
                            android:editable="false"


                            android:fontFamily="@font/poppins"

                            android:hint="Enter Full Name Here"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey"

                            android:textColorHint="@color/gray7"
                            android:textSize="@dimen/_14sdp"

                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="@string/email"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangular_edit">

                        <EditText
                            android:id="@+id/h_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:backgroundTint="@color/white"
                            android:editable="false"


                            android:fontFamily="@font/poppins"


                            android:hint="Enter Email Address"
                            android:textAlignment="viewStart"


                            android:textColor="@color/grey"
                            android:textColorHint="@color/gray7"

                            android:textSize="@dimen/_14sdp"


                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="@string/Message"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangular_edit">

                        <EditText
                            android:id="@+id/h_message"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_103sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/poppins"
                            android:gravity="start"

                            android:hint="Write your Message here..."
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey"

                            android:textColorHint="@color/gray7"
                            android:textSize="@dimen/_14sdp"


                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/t_submit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rectangle_yellow"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Submit"

                        android:textColor="@color/black1"

                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/add_success_popup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <include layout="@layout/add_sucessfully_popup" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/help_edit_support"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:visibility="gone">

                <include layout="@layout/loader_layout" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>