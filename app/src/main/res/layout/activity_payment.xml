<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Payment.Payment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/arrow_msg"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_back" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Sumon Khan, Hi"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/black1"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"

            android:fontFamily="@font/poppins"
            android:text="PICK UP"
            android:textColor="@color/black1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/c_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins"
            android:text="Park Road London 5487"
            android:textColor="@color/grey4"
            android:textSize="14dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey6"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:fontFamily="@font/poppins"
            android:text="DROP"
            android:textColor="@color/black1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/c_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins"
            android:text="Park Road London 5487"
            android:textColor="@color/grey4"
            android:textSize="14dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey6"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="TOTAL PAY"
                android:textColor="@color/black1"
                android:textSize="18dp"


                />

            <TextView
                android:id="@+id/c_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="â‚¹250"
                android:textColor="@color/black1"
                android:textSize="18dp"


                />


        </RelativeLayout>
  <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_8sdp"
          android:fontFamily="@font/poppins"
          android:text="Receiving by cash"
          android:textColor="@color/grey4"
          android:textSize="16dp"


          />

      <RadioButton
          android:layout_width="29dp"
          android:layout_height="33dp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginTop="@dimen/_5sdp"
          android:layout_marginEnd="0dp"


          android:checked="true" />





  </RelativeLayout>

        <TextView
            android:id="@+id/t_done_payment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_yellow"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/black1"

            android:textSize="16sp"
            android:textStyle="bold" />
<!--

        <TextView
            android:id="@+id/t_add_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/lato_regular"

           android:layout_gravity="center"
            android:text="Write a review"

            android:textColor="@color/blue"

            android:textSize="15sp"
            android:textStyle="bold" />
-->












    </LinearLayout>
    <RelativeLayout
        android:id="@+id/add_done_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include layout="@layout/payment__popup"/>

    </RelativeLayout>






</LinearLayout>