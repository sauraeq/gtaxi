<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/google_map_image"
                    android:layout_height="match_parent">

                </ImageView>
        -->






        <androidx.cardview.widget.CardView
            android:id="@+id/card_three"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"



            android:elevation="2dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"

            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="32dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"

                    android:layout_marginTop="10dp"
                    android:background="@color/black1">

                </View>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins"

                        android:text="30 min"
                        android:layout_gravity="center"
                        android:textColor="@color/black1"
                        android:textSize="20dp" />


                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:src="@drawable/earning_people_rofile" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins"
                        android:text="2.2 km"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_gravity="center"

                        android:textColor="@color/black1"
                        android:textSize="20dp" />










                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/poppins"
                        android:text="Picking up Ankur Saxena"
                        android:layout_marginLeft="@dimen/_6sdp"


                        android:textColor="@color/grey4"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="@dimen/_25sdp"

                        android:layout_height="@dimen/_25sdp"
                        android:padding="4dp"
                        android:src="@drawable/call_icon" />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/chat"

                        android:padding="4dp"
                        android:src="@drawable/chat_icon" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_text_button"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Complete"
                        android:textColor="@color/black1"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/rectangle_yellow"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:text="Recall"
                        android:textColor="@color/black1"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</FrameLayout>