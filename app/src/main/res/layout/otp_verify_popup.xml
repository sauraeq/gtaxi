<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

   android:layout_gravity="center"
    android:layout_height="wrap_content">



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/_10sdp"

    android:layout_height="wrap_content">



    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="@color/black1"
                android:text="Enter the OTP"
                android:textAlignment="center" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <com.chaos.view.PinView
                    android:id="@+id/otp_v"
                    style="@style/PinWidget.PinView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:cursorVisible="true"
                    android:hint="*"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:cursorColor="@color/black"
                    app:cursorWidth="@dimen/_2sdp"
                    app:itemCount="4"
                    app:itemHeight="48dp"
                    app:itemSpacing="@dimen/_7sdp"
                    app:itemWidth="48dp"
                    app:lineColor="@color/grey4"
                    app:lineWidth="@dimen/_2sdp"

                    app:viewType="line" />

            </LinearLayout>


           <!-- <TextView
                android:layout_width="@dimen/_172sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/black2"
                android:layout_gravity="center"
                android:text="Your Account has been Added successfully."
                android:textAlignment="center" />
-->
            <androidx.cardview.widget.CardView
                android:id="@+id/okayCaerdview_d"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/darkyellow"
                app:cardCornerRadius="@dimen/_56sdp">

                <TextView
                    android:id="@+id/submit_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_24sdp"

                    android:layout_gravity="center"
                    android:textColor="@color/black1"
                    android:gravity="center"
                    android:backgroundTint="@color/black2"
                    android:fontFamily="@font/lato_regular"
                    android:text="Okay"
                    android:textSize="@dimen/_16sdp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>

